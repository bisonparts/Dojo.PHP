{
    "name": "dojo-engineering/dojo-php",
    "description": "The official Dojo PHP library, supporting PHP 7.4+",
    "type": "library",
    "keywords": ["php", "package", "api", "dojo"],
    "homepage": "https://github.com/dojo-engineering/Dojo.PHP",
    "license": "MIT",
    "authors": [
        {
            "name": "Dojo",
            "email": "support@dojo.tech"
        }
    ],
    "require": {
        "php": ">=7.3",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.3",
        "guzzlehttp/psr7": "^1.7 || ^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Dojo_PHP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dojo_PHP\\Tests\\": "tests/"
        }
    }
}